@model IEnumerable<GestionServiceBatiment.ASP.Models.Companies.DisplayCompany>

@{
    ViewBag.Title = "Index";
}

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Listes des prestataires</h2>
                <ol>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>Prestataires</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Service Section ======= -->
    <section id="services" class="services">
        <div class="container">

            <p>
                @Html.ActionLink("Nouveau compte", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VatNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressStreet)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressMailBox)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressCity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressZipCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressCountry)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContractorId)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VatNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddressStreet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddressNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddressMailBox)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddressCity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddressZipCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddressCountry)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContractorId)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </section>
</main>