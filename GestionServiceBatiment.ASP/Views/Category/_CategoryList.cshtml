                </h2>
                <div class="entry-content">
                    <p>
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                </div>
            }
            else
            {
                <div class="entry-img">
                    <a href="/Create-Category?category=@Html.DisplayFor(modelItem => item.Id)"><img src="~/Content/assets/img/blog-1.jpg" alt="" class="img-fluid"></a>
                </div>
