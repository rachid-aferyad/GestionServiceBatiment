@model IEnumerable<GestionServiceBatiment.ASP.Models.Categories.CategoryListing>


@foreach (var item in Model)
{
    <div class="col-lg-3  col-md-4 d-flex align-items-stretch" data-aos="fade-up">
        <article class="entry">

            @if (item.ParentId is null)
            {
                <div class="entry-img">
                    <a href="@Request.Path/@Html.DisplayFor(modelItem => item.NavigationName)">
                        <img src="~/Content/assets/img/blog-1.jpg" alt="" class="img-fluid">
                    </a>
                </div>
                <h2 class="entry-title">
                    <a href="@Request.Path/@Html.DisplayFor(modelItem => item.NavigationName)">@Html.DisplayFor(modelItem => item.Name)</a>
                </h2>
                <div class="entry-content">
                    <p>
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                    @*<div class="read-more">
                    <a href="blog-single.html">Read More</a>
                </div>*@
                </div>
            }
            else if (@Request.Path.ToLower().StartsWith("/services"))
            {
                <div class="entry-img">
                    <a href="@Request.Path/@Html.DisplayFor(modelItem => item.NavigationName)"><img src="~/Content/assets/img/blog-1.jpg" alt="" class="img-fluid"></a>
                </div>
                <h2 class="entry-title">
                    <a href="@Request.Path/@Html.DisplayFor(modelItem => item.NavigationName)"> @Html.DisplayFor(modelItem => item.Name) </a>
                </h2>
                <div class="entry-content">
                    <p>
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                </div>
            }
            else if (@Request.Path.ToLower().StartsWith("/requests"))
            {
                <div class="entry-img">
                    <a href="@Request.Path/@Html.DisplayFor(modelItem => item.NavigationName)"><img src="~/Content/assets/img/blog-1.jpg" alt="" class="img-fluid"></a>
