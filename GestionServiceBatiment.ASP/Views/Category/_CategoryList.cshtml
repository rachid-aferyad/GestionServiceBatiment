                <h2 class="entry-title">
                    <a href="@Request.Path/@Html.DisplayFor(modelItem => item.NavigationName)"> @Html.DisplayFor(modelItem => item.Name) </a>
                </h2>
                <div class="entry-content">
                    <p>
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                </div>
            }
            else if (@Request.Path.ToLower().StartsWith("/service"))
            {
                <div class="entry-img">
                    <a href="/Create-Service?category=@Html.DisplayFor(modelItem => item.Id)"><img src="~/Content/assets/img/blog-1.jpg" alt="" class="img-fluid"></a>
