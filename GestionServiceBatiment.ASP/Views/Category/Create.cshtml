@model GestionServiceBatiment.ASP.Models.Categories.CreateCategoryForm

@{
    ViewBag.Title = "Create";
}

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Nouvelle Catégorie</h2>
                <ol>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Catégories", "Index")</li>
                    <li>Nouvelle Catégorie</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->


    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Création d'une nouvelle catégorie</h2>
            </div>

            <div class="row">

                <div class="col-lg-5 d-flex align-items-stretch">
                    <div class="hero-img" data-aos="zoom-in" data-aos-delay="200">
                        <img src="~/Content/assets/img/hero-img.png" class="img-fluid animated" alt="">
                    </div>

                </div>

                <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                    @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "php-email-form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(model => model.ParentId, htmlAttributes: new { @class = "control-label" })
                                    @Html.DropDownListFor(m => m.ParentId, Model.SupCategories, "-- Sélectionner la catégorie parente --", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.TextAreaFor(model => model.Description,  new { @class = "form-control", @rows = 10 })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <div class="loading">Loading</div>
                                <div class="error-message"></div>
                                <div class="sent-message">La catégorie est créée.</div>
                            </div>
                            <div class="text-center"><button type="submit">Créer</button></div>
                        </div>
                        }
                 </div>
            </div>

        </div>
    </section>
</main>
