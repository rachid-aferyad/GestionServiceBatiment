@model IEnumerable<GestionServiceBatiment.ASP.Models.Categories.CategoryListing>

@{
    ViewBag.Title = "Index";
}

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Listes des catégories</h2>
                <ol>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>Catégories</li>
                </ol>
            </div>

        </div>
    </section>
    <!-- End Breadcrumbs -->
    <!-- ======= Service Section ======= -->
    <section id="blog" class="blog">
        <div class="container">
            <div class="row">
                @Html.Partial("_CategoryList", Model)
            </div>
        </div>
    </section>
</main>

