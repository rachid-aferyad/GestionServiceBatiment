@model GestionServiceBatiment.ASP.Models.Home.HomeViewModel
@{
    ViewBag.Title = "Index";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">

    <div class="container">
        <div class="row">
            <div class="col-lg-6 d-flex flex-column justify-content-center pt-4 pt-lg-0 order-2 order-lg-1" data-aos="fade-up" data-aos-delay="200">
                <h1>Trouver un entrepreneur idéal pour le service que vous avez besoin</h1>
                <h2>@Model.NumberOfServices services à votre disposition</h2>
                <div class="d-lg-flex">
                    <a href="/Services" class="btn-service scrollto">Trouver un service</a>
                    @*<a href="https://www.youtube.com/watch?v=jDDaplaOz7Q" class="venobox btn-watch-video" data-vbtype="video" data-autoplay="true"> Watch Video <i class="icofont-play-alt-2"></i></a>*@
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="zoom-in" data-aos-delay="200">
                <img src="~/Content/assets/img/hero-img.png" class="img-fluid animated" alt="">
            </div>
        </div>
    </div>

</section><!-- End Hero -->

<main id="main">

    <!-- ======= Requests Section ======= -->
    <section id="services" class="services">
        <div class="container">

            <div class="section-title">
                <h2>Les demandes les plus récentes</h2>
                <p></p>
            </div>

            <div class="row">
                    @foreach (var request in Model.RecentRequests)
                    {
                        <div class="col-md-6 mt-4 mt-md-0">
                                <div class="icon-box">
                                    @*<i class="icofont-computer"></i>*@
                                    <div class="mb-5">
                                        <div class="float-left">
                                            <h4><a href="/Request/Details/@request.Id">@request.Title</a></h4>
                                        </div>
                                        <div class="float-right date">
                                            <span>@request.CreationDate</span>
                                        </div>
                                    </div>
                                    <p>@request.Description</p>
                                </div>
                        </div>
                    }
            </div>

        </div>
    </section><!-- End Requests Section -->
    <!-- ======= Post Request Section ======= -->
    <section id="cta" class="cta">
        <div class="container" data-aos="zoom-in">

            <div class="row">
                <div class="col-lg-8 text-center text-lg-left">
                    <h3>Poster une demande</h3>
                    <p> Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
                </div>
                <div class="col-lg-4 cta-btn-container text-center">
                    <a class="cta-btn align-middle" href="/Request">Poster une demande</a>
                </div>
            </div>

        </div>
    </section><!-- End Post Request Section -->
    <!-- ======= Services Section ======= -->
    <section id="blog" class="blog">
        <div class="container">
            <div class="section-title">
                <h2>De quel service avez-vous besoin?</h2>
                <p></p>
            </div>
            <div class="row">

                @foreach (var category in Model.CategoryList)
                {
                    <div class="col-lg-3  col-md-4 d-flex align-items-stretch" data-aos="fade-up">
                        <article class="entry">

                            <div class="entry-img">
                                <a href="blog-single.html">
                                    <img src="~/Content/assets/img/blog-1.jpg" alt="" class="img-fluid">
                                </a>
                            </div>

                            <h2 class="entry-title">
                                <a href="blog-single.html">@Html.DisplayFor(model => category.Name)</a>
                            </h2>

                            @*<div class="entry-meta">
                                    <ul>
                                        <li class="d-flex align-items-center"><i class="icofont-user"></i> <a href="blog-single.html">John Doe</a></li>
                                        <li class="d-flex align-items-center"><i class="icofont-wall-clock"></i> <a href="blog-single.html"><time datetime="2020-01-01">Jan 1, 2020</time></a></li>
                                    </ul>
                                </div>*@

                            <div class="entry-content">
                                <p>
                                    @Html.DisplayFor(model => category.Description)
                                </p>
                                @*<div class="read-more">
                                        <a href="blog-single.html">Read More</a>
                                    </div>*@
                            </div>

                        </article><!-- End blog entry -->
                    </div>
                }

            </div>

            <div class="blog-pagination" data-aos="fade-up">
                <ul class="justify-content-center">
                    <li class="disabled"><i class="icofont-rounded-left"></i></li>
                    <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#"><i class="icofont-rounded-right"></i></a></li>
                </ul>
            </div>

        </div>
    </section><!-- End Services Section -->
    <!-- ======= Testimonials Section ======= -->
    <section id="testimonials" class="testimonials">
        <div class="container">
            <div class="section-title">
                <h2>Les prestataires les plus notés</h2>
                <p></p>
            </div>
            <div class="row">

                @foreach (var provider in Model.MostRatedProviders)
                {
                    <div class="col-lg-6">
                        <div class="testimonial-item">
                            <img src="~/Content/assets/img/testimonials/testimonials-1.jpg" class="testimonial-img" alt="">
                            <h3>@provider.Name</h3>
                            <h4>@provider.Name</h4>
                            <p>
                                <i class="bx bxs-quote-alt-left quote-icon-left"></i>
                                @*@provider.AddressCity, @provider.AddressCountry*@
                                <i class="bx bxs-quote-alt-right quote-icon-right"></i>
                            </p>
                        </div>
                    </div>
                }

            </div>

        </div>
    </section><!-- End Testimonials Section -->
    <!-- ======= About Us Section ======= -->
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Simple & Rapide</h2>
            </div>

            <div class="row content">
                <div class="col-lg-6">
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore
                        magna aliqua.
                    </p>
                    <ul>
                        <li><i class="ri-check-double-line"></i>Proposez un service</li>
                        <li><i class="ri-check-double-line"></i>Répondez aux demandes</li>
                        <li><i class="ri-check-double-line"></i>Réalisez le travail</li>
                    </ul>
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0">
                    <p>
                        Ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate
                        velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in
                        culpa qui officia deserunt mollit anim id est laborum.
                    </p>
                    <a href="#" class="btn-learn-more">Proposer un service</a>
                </div>
            </div>

        </div>
    </section><!-- End About Us Section -->
    <!-- ======= Team Section ======= -->
    <section id="team" class="team section-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Les derniers avis</h2>
                <p></p>
            </div>

            <div class="row">

                @foreach (var review in Model.LatestReviews)
                {
                    <div class="col-lg-6">
                        <div class="member d-flex align-items-start" data-aos="zoom-in" data-aos-delay="100">
                            <div class="pic"><img src="~/Content/assets/img/team/team-1.jpg" class="img-fluid" alt=""></div>
                            <div class="member-info">
                                <h4>@review.Creator.FirstName @review.Creator.LastName</h4>
                                <span>@review.CreationDate</span>
                                <p>@review.Content</p>
                                <div class="social">
                                    <a href=""><i class="ri-twitter-fill"></i></a>
                                    <a href=""><i class="ri-facebook-fill"></i></a>
                                    <a href=""><i class="ri-instagram-fill"></i></a>
                                    <a href=""> <i class="ri-linkedin-box-fill"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
    </section><!-- End Team Section -->

</main><!-- End #main -->


@section FooterSectionTop{
    <div class="footer-newsletter">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <h4>Joindre Notre Newsletter</h4>
                    <p>Inscrivez-vous à notre newsletter pour ne rien rater de notre actualité
                    </p>
                    <form action="" method="post">
                        <input type="email" name="email"><input type="submit" value="Abonnez-Vous">
                    </form>
                </div>
            </div>
        </div>
    </div>
}